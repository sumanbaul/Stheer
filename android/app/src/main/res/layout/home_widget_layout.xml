<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FocusFluke"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your day at a glance"
        android:textSize="12sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/btnTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A000000"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/tvTasksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTasksStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 pending • 0 completed"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnHabits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A000000"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/tvHabitsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habits"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvHabitsStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0 today"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnInsights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A000000"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tvInsightsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insights"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvInsightsStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus 0m • Streak 0d"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>


